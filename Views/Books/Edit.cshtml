@model WebproQuiz2.Data.Book

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
</head>

<div>
    <h1 class="text-center">Edit Building</h1>
</div>
<div class="create-wrapper">
    <div class="create-box">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-wrapper">
                <div class="form-group">
                    <label asp-for="BookTitle" class="control-label">Building Name</label><br>
                    <input asp-for="BookTitle" class="form-control" />
                    <span asp-validation-for="BookTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookIsbn" class="control-label">Area</label><br>
                    <input asp-for="BookIsbn" class="form-control" />
                    <span asp-validation-for="BookIsbn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookPrice" class="control-label">Price</label><br>
                    <input asp-for="BookPrice" class="form-control" />
                    <span asp-validation-for="BookPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a style="text-decoration: none; background-color:yellow" asp-action="Index" class="btn">Back</a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
