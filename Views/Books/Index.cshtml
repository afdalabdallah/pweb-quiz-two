@model IEnumerable<WebproQuiz2.Data.Book>

@{
    ViewData["Title"] = "Buildings";
}


<head>
    <link rel="stylesheet" href="~/css/book.css" />
</head>

<div id="booksPage">
    <h1 class="fw-bold mt-5">Building List</h1 <p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>


    <table class="book-table">
        <thead>
            <tr>
                <th>
                    Building Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 70%;">
                        @Html.DisplayFor(modelItem => item.BookTitle)
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
